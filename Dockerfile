
# скачать из репозитория Docker и установить NodeJS
FROM node:alpine

#  задать рабочую директорию, с которой будем работать — /usr/app/front.
WORKDIR /usr/app/front

# открыть порт 3000. связь с приложением  будет происходить через этот порт.
EXPOSE 3000

# скопировать содержимое исходного проекта в рабочую папку контейнера.
COPY ./ ./

# установить пакеты, необходимые для запуска приложения.
RUN npm install

# запустить приложения командой "npm start"
CMD ["npm", "start"]
